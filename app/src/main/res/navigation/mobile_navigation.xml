<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/home_layout" />

    <fragment
        android:id="@+id/navigation_posting"
        android:name="com.example.myapp.ui.postUI.postUIFrangment"
        android:label="Post"
        tools:layout="@layout/post_layout" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.myapp.ui.searchUI.searchUIFragment"
        android:label="search"
        tools:layout="@layout/search_layout" />

    <fragment
        android:id="@+id/navigation_rank"
        android:name="com.example.myapp.ui.rankUI.rankUIFragment"
        android:label="rank"
        tools:layout="@layout/rank_layout" />
</navigation>