<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="13">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/review_shape"
            android:orientation="horizontal"
            android:weightSum="14">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.3"
                app:srcCompat="@drawable/ic_search"></ImageView>

            <EditText
                android:id="@+id/search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="13.7"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:hint="#"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="10"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/search_tag1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="9dp"
                    android:layout_weight="3"
                    android:text="#혼밥"
                    android:background="@drawable/review_shape">
                </Button>
                <Button
                    android:id="@+id/search_tag2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="9dp"
                    android:layout_weight="3"
                    android:text="#혼코노"
                    android:background="@drawable/review_shape">
                </Button>

                <Button
                    android:id="@+id/search_tag3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="9dp"
                    android:layout_weight="3"
                    android:text="#혼자"
                    android:background="@drawable/review_shape"
                    android:layout_gravity="center"></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="10"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </LinearLayout>
                <Button
                    android:id="@+id/search_tag4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/review_shape"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="9dp"
                    android:layout_weight="3"
                    android:text="#나혼자">
                </Button>
                <Button
                    android:id="@+id/search_tag5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/review_shape"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="9dp"
                    android:layout_weight="3"
                    android:text="#또혼자">
                </Button>
                <Button
                    android:id="@+id/search_tag6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/review_shape"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="9dp"
                    android:layout_weight="3"
                    android:text="#ㅠㅠ">
                </Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/search_image1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_account">
                    </ImageView>
                    <ImageView
                        android:id="@+id/search_image2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_account">
                    </ImageView>
                </LinearLayout>
                <ImageView
                    android:id="@+id/search_image3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_account">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/search_image4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_account">
                </ImageView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/search_image5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_account">
                    </ImageView>
                    <ImageView
                        android:id="@+id/search_image6"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_account">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="25dp"
                android:text="다른사람의 혼플을\n                  검색해 보세요!">
            </TextView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:background="?android:attr/dividerVertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/search_homebtn"
                android:layout_width="38dp"
                android:layout_height="40dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_home" />

            <ImageButton
                android:id="@+id/search_searchbtn"
                android:layout_width="38dp"
                android:layout_height="40dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_searchon" />

            <ImageButton
                android:id="@+id/search_postbtn"
                android:layout_width="38dp"
                android:layout_height="40dp"
                android:background="@null"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_addpost" />

            <ImageButton
                android:id="@+id/search_rankbtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_rank" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
